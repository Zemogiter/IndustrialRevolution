<Defs>
  <!-- Tuque  -->
  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_Tuque</defName>
    <label>tuque</label>
    <thingClass>Vanya_Headgear.HeadgearFrame</thingClass>
    <description>A soft, thick cap. Great for keeping warm in winter.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Tuque/Tuque</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1500</WorkToMake>
      <Mass>0.07</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>-2</Insulation_Heat>
    </statBases>
    <generateCommonality>0.5</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Tuque/Tuque</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>15</weight>
          <only>RGBA(0.20,0.20,0.30,1)</only>
        </li>
        <li>
          <weight>25</weight>
          <only>RGBA(0.50,0.24,0.24,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.7,0.7,0.7,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <!-- Cowboy Hat -->
  <ThingDef ParentName="HatMakeableBase" Name="CowboyHat">
    <defName>Apparel_CowboyHat</defName>
    <label>cowboy hat</label>
    <thingClass>Vanya_Headgear.HeadgearFrame</thingClass>
    <description>Stylish yet rugged, this hat keeps the sun and rain off - and it gives anyone who wears it a bit of extra charm. It is the most important part of traditional western attire.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/CowboyHat/CowboyHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>0.14</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Heat>8</Insulation_Heat>
    </statBases>
    <generateCommonality>1.4</generateCommonality>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <apparel>
