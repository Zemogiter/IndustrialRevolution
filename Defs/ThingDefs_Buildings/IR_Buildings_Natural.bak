<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="RockBase">
    <defName>MineableCoal</defName>
    <label>coal ore</label>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
	  <color>(89,100,90)</color>
	  <colorTwo>(0,0,0)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1500</MaxHitPoints>
    </statBases>
    <description>A rich coal ore.</description>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>Coal</mineableThing>
      <mineableYield>55</mineableYield>
      <mineableScatterCommonality>1</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>8</min>
        <max>10</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
  
</ThingDefs>